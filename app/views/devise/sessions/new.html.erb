<div class='row mt-3'>
  <div class='col-4'></div>
  <div class='col-4'>
    <%= render "components/flash_dialog" %>
    <div class='w-100 card rounded-0'>
      <div class='card-header border-light text-center p-3'>
        <h2>Log in</h2>
      </div>
      <div class='card-body'>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
          <div class="form-actions w-100">
            <%= f.button :submit, "Log in", class: 'btn-primary col float-right mb-3 rounded-0' %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="text-center mt-4">
      Do not have an account? <%= render "devise/shared/links" %>
    </div>
  </div>
  <div class='col-4'></div>
</div>
